# ========================================
# LOGGING PLATFORM - ENVIRONMENT VARIABLES TEMPLATE
# ========================================
# Copy this file to .env and update with your actual values
# DO NOT commit .env to version control

# Application Configuration
APP_NAME=logging-platform-backend
APP_VERSION=1.0.0
SERVER_PORT=8080

# Active Profile (dev/test/prod)
SPRING_PROFILES_ACTIVE=dev

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=postgres
DB_USERNAME=postgres
DB_PASSWORD=your_secure_db_password
DB_SCHEMA=logging-platform

# Database Connection Pool (optional)
DB_POOL_SIZE=20
DB_POOL_MIN_IDLE=5
DB_CONNECTION_TIMEOUT=30000
DB_IDLE_TIMEOUT=600000
DB_MAX_LIFETIME=1800000

# Google OAuth2 Configuration (REQUIRED)
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_REDIRECT_URI={baseUrl}/login/oauth2/code/google

# Kafka Configuration
KAFKA_BOOTSTRAP_SERVERS=localhost:19092
KAFKA_CONSUMER_GROUP_ID=log-consumer-group
KAFKA_AUTO_OFFSET_RESET=earliest
KAFKA_MAX_POLL_RECORDS=500
KAFKA_FETCH_MIN_SIZE=1MB
KAFKA_FETCH_MAX_WAIT=5000

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DATABASE=0
REDIS_TIMEOUT=2000

# Security Configuration
JWT_SECRET=your_jwt_secret_key_minimum_256_bits
SESSION_TIMEOUT=3600
COOKIE_SECURE=false
COOKIE_HTTP_ONLY=true
COOKIE_SAME_SITE=lax

# Company Configuration
COMPANY_ADMIN_EMAIL=admin@yourcompany.com

# Frontend Configuration
FRONTEND_URL=http://localhost:3000
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8000

# JPA/Hibernate Configuration
JPA_DDL_AUTO=validate
JPA_SHOW_SQL=false
JPA_FORMAT_SQL=false
JPA_BATCH_SIZE=100

# Logging Configuration
LOG_LEVEL_ROOT=INFO
LOG_LEVEL_APP=DEBUG
LOG_FILE_PATH=logs/app.log

# Flyway Configuration (for Maven)
flyway.url=jdbc:postgresql://localhost:5432/postgres
flyway.user=postgres
flyway.password=your_flyway_password
flyway.schemas=logging-platform

# Management and Monitoring
MANAGEMENT_ENDPOINTS_ENABLED=true
ACTUATOR_EXPOSURE=health,info,metrics
HEALTH_DETAILS=when-authorized

# File Upload Configuration
MAX_FILE_SIZE=10MB
MAX_REQUEST_SIZE=50MB

# Server Configuration
CONTEXT_PATH=
